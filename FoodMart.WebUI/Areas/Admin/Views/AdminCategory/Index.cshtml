@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

    <div class="card">
        <h5 class="card-header">Kategori Paneli</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Kategori Adı</th>
                        <th>Kategori İkon</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.CategoryName</strong></td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <img src="@item.IconUrl" style="border-radius:40px 40px;" /></td>
                            <td>
                                <a class="btn btn-outline-success" href="/Admin/AdminCategory/UpdateCategory/@item.CategoryId"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                            </td>
                            <td>
                                <a class="btn btn-outline-danger" href="/Admin/AdminCategory/DeleteCategory/@item.CategoryId"><i class="bx bx-trash me-1"></i> Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="/Admin/AdminCategory/CreateCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
            <br />
            <br />

        </div>          
    </div>
