@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<!-- Basic Layout -->
<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Kategori Düzenleme</h5>
        </div>
        <div class="card-body">
            <form method="post">

                <input type="hidden" asp-for="CategoryId" />

                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Kategori Adı</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="CategoryName" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" for="basic-default-name">Kategori İkonu (Url)</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="IconUrl" class="form-control" />
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


